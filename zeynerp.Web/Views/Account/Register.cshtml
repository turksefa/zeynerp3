        <form id="form" asp-action="Register" method="post">
            <div class="form-group mb-3">
                <div class="input-group">
                    <div class="form-floating">
                        <input asp-for="FullName" type="text" class="form-control" id="floatingInputGroupName"
                            placeholder="Ad Soyad" required>
                        <label for="floatingInputGroupName">Ad Soyad</label>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <div class="input-group">
                    <div class="form-floating">
                        <input asp-for="CompanyName" type="text" class="form-control" id="floatingInputGroupCompanyName"
                            placeholder="Şirket Adı" required>
                        <label for="floatingInputGroupCompanyName">Şirket Adı</label>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <div class="input-group">
                    <div class="form-floating">
                        <input asp-for="Email" type="email" class="form-control" id="floatingInputGroupEmail"
                            placeholder="E-Posta" required>
                        <label for="floatingInputGroupEmail">E-Posta</label>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <div class="input-group">
                    <div class="form-floating">
                        <input asp-for="Password" type="password" class="form-control" id="floatingInputGroupPassword"
                            placeholder="Şifre" required>
